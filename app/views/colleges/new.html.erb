<% if @college.errors.present? %>
	<p><%= @college.errors.full_messages.first %></p>
<% end %>
<h1>Add a College</h1>
<br>

<div class = "container">
	<%= form_for @college do |f| %>
	<div class = "row">
		<div class="col-xs-2">Name</div>
		<div class="col-xs-2"><%= f.text_field :name, :placeholder => "Name" %></div>
		<div class="col-xs-2">City</div>
		<div class="col-xs-2"><%= f.text_field :city, :placeholder => "City" %></div>
		<div class="col-xs-2">State</div>
		<div class="col-xs-2"><%= f.text_field :state, :placeholder => "State" %></div>
	</div>
	<div class="row">
		<div class="col-xs-2">Contact Information</div>
		<div class="col-xs-2"><%= f.text_field :contact_info, :placeholder => "Contact Information" %></div>
		<div class="col-xs-2">Address</div>
		<div class="col-xs-2"><%= f.text_field :address, :placeholder => "Address" %></div>
		<div class="col-xs-2">Tuition</div>
		<div class="col-xs-2"><%= f.number_field :tuition, :placeholder => "tuition" %></div>
	</div>
	<div class="row">
		<div class="col-xs-2">Comments</div>
		<div class="col-xs-2"><%= f.text_field :comments, :placeholder => "Comments" %></div>
		<div class="col-xs-2">Financial Aid</div>
		<div class="col-xs-2"><%= f.text_field :financial_aid, :placeholder => "True or False" %></div>
		<div class="col-xs-2">Scholarship</div>
		<div class="col-xs-2"><%= f.text_field :scholarship, :placeholder => "True or False" %></div>
	</div>
	<div class="row">
		<div class="col-xs-2"><%= f.submit "Submit", :class => "submit_submit"%></div>
	</div>
<% end %>
</div>

   